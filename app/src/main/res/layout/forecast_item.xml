<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">

    <TextView
        android:id="@+id/forecast_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="30 03 2013"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:textSize="25sp" />

    <View
        android:id="@+id/forecast_horizontal_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white"
        android:layout_below="@+id/forecast_date"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"/>

    <ImageView
        android:id="@+id/forecast_icon"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/forecast_horizontal_line"/>

    <TextView
        android:id="@+id/forecast_min_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_toStartOf="@+id/slash"
        android:layout_below="@+id/forecast_horizontal_line"/>

    <TextView
        android:id="@+id/slash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:text="/"
        android:layout_toStartOf="@+id/forecast_max_temp"
        android:layout_below="@+id/forecast_horizontal_line"/>

    <TextView
        android:id="@+id/forecast_max_temp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:textSize="30sp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/forecast_horizontal_line"
        android:paddingBottom="50dp"/>

</RelativeLayout>